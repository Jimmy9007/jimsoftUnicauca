<script>
    function hideshow() {
        var passwordactual = document.getElementById("passwordactual");
        var password = document.getElementById("password");
        var passwordConfirm = document.getElementById("passwordConfirm");
        var slash = document.getElementById("slash");
        var eye = document.getElementById("eye");
        var slash2 = document.getElementById("slash2");
        var eye2 = document.getElementById("eye2");
        var slash3 = document.getElementById("slash3");
        var eye3 = document.getElementById("eye3");

        if (passwordactual.type === 'password' || password.type === 'password' || passwordConfirm.type === 'password') {
            passwordactual.type = "text";
            password.type = "text";
            passwordConfirm.type = "text";
            slash.style.display = "block";
            eye.style.display = "none";
            slash2.style.display = "block";
            eye2.style.display = "none";
            slash3.style.display = "block";
            eye3.style.display = "none";
        } else {
            passwordactual.type = "password";
            password.type = "password";
            passwordConfirm.type = "password";
            slash.style.display = "none";
            eye.style.display = "block";
            slash2.style.display = "none";
            eye2.style.display = "block";
            slash3.style.display = "none";
            eye3.style.display = "block";
        }

    }
</script>